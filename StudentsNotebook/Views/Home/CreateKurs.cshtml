@model StudentsNotebook.Models.Kurs

@{
	ViewData["Title"] = "CreateKurs";
}
<h1 class ="display-4">Posiadasz @ViewBag.liczbakursow kursy</h1>
<form asp-action="CreateKurs">
	 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<table class="table-active">
		<thead>
			<tr>
				<th>Id kursu: </th>
				<th>Nazwa kursu: </th>
				<th>Prowadzący: </th>
				<th>Trudność kursu: </th>
				<th>Notatki: </th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					<input asp-for="Id"/>
					<span asp-validation-for ="Id" class="text-danger"></span>
				</td>
				<td>
					<input  asp-for="Coursename" />
					<span asp-validation-for="Coursename" class="text-danger"></span>
				</td>
				<td>
					<input asp-for="Professor" />
					<span asp-validation-for="Professor" class="text-danger"></span>
				</td>
				<td>
					<input asp-for="Learndifficulty" />
					<span asp-validation-for="Learndifficulty" class="text-danger"></span>
				</td>
				<td>
					<input asp-for="Notes" />
					<span asp-validation-for="Notes" class="text-danger"></span>
				</td>
			</tr>
		</tbody>
	</table>
	<div class="col-md-12 text-center">
		<button class=" btn btn-danger" type="submit" onclick="location.href='@Url.Action("CreateKurs", "Home")'">Dodaj kurs!!!</button>
	</div>
</form>
